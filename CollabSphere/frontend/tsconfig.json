{
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ This is crucial for React with TypeScript
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // ✅ Ensures JSX types are available
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
